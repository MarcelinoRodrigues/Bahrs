@model bahrsDB.Models.Parking

@{
    ViewData["Title"] = "Editar";
}

<h2>@ViewData["Title"]</h2>

<h4>Estacionamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Entrada" class="control-label"></label>
                <input asp-for="Entrada" class="form-control" id="naoPodeSerAlterado" />
                <span asp-validation-for="Entrada" class="text-danger">* Não pode ser alterado</span>
            </div>
            <div class="form-group">
                <label asp-for="Vencimento" class="control-label"></label>
                <input asp-for="Vencimento" class="form-control" id="naoPodeSerAlterado"/>
                <span asp-validation-for="Vencimento" class="text-danger">* Não pode ser alterado</span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VeiculoId" class="control-label"></label>
                <select asp-for="VeiculoId" class="form-control" id="naoPodeSerAlterado" asp-items="ViewBag.VeiculoId"></select>
                <span asp-validation-for="VeiculoId" class="text-danger">* Não pode ser alterado</span>
            </div>
            <div class="form-group">
                <label asp-for="FuncionarioId" class="control-label"></label>
                <select asp-for="FuncionarioId" class="form-control" asp-items="ViewBag.FuncionarioId"></select>
                <span asp-validation-for="FuncionarioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VagaId" class="control-label"></label>
                <select asp-for="VagaId" class="form-control" id="naoPodeSerAlterado" asp-items="ViewBag.VagaId"></select>
                <span asp-validation-for="VagaId" class="text-danger">* Não pode ser alterado</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-default">Voltar</a>
            </div>
        </form>
    </div>
</div>

