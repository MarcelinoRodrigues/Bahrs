@model IEnumerable<bahrsDB.Models.User>

@{
    ViewData["Title"] = "Index";
}
<div style="">
    <form class="box" style="width: 400px;
		padding: 40px;
		margin: 10% auto;
		background-color: #191919;
		text-align: center;
		border-radius: 10%;">
        <h2 style="color: white;
		  font-weight: 400;
		  font-style: italic;">
            Login
        </h2>
        <input class="text" type="text" placeholder="Nome"
               style="        border: 0;
        background: none;
        display: block;
        margin: 20px auto;
        text-align: center;
        border: 2px solid #A9A9A9;
        padding: 14px 10px;
        width: 200px;
        outline: none;
        color: white;
        border-radius: 24px;
        transition: 0.25s;" />
        <input class="pass" type="password" placeholder="Senha"
               style="        border: 0;
        background: none;
        display: block;
        margin: 20px auto;
        text-align: center;
        border: 2px solid #A9A9A9;
        padding: 14px 10px;
        width: 200px;
        outline: none;
        color: white;
        border-radius: 24px;
        transition: 0.25s;" />
        <input type="submit" value="Login"
               style="        border: 0;
        background: none;
        display: block;
        margin: 20px auto;
        text-align: center;
        border: 2px solid #A9A9A9;
        padding: 14px 40px;
        outline: none;
        color: white;
        border-radius: 24px;
        transition: 0.25s;
        cursor: pointer;" />
        <p>
            <a asp-action="Create"
               style="color: white;
			text-decoration: none;
			font-style: italic;">
                Criar Novo Usuário
            </a>
        </p>
    </form>

</div>

