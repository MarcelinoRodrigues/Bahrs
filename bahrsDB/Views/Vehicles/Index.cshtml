@model IEnumerable<bahrsDB.Models.Vehicle>

@{
    ViewData["Title"] = "Veiculos";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr class="bg-primary">
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Placa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Placa)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">Detalhes</a>
                    <a onclick="veiculo.Excluir(@item.Id)" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts{
    <script>
        var veiculo = {

            Excluir(id) {

                alertify.confirm("ESTACIONAMENTO", "Confirma exclusão do registro?", function () {
                    window.location.href = "Vehicles/Delete/" + id;
                }, function () {
                    alertify.error('Operação cancelada');
                }).set({ labels: { ok: 'Confirmar', cancel: 'Cancelar' } });

            }
        }</script>
}